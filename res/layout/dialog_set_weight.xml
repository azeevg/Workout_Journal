<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:background="@color/light_grey_1" android:weightSum="1">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="#ffa500">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/dlg_set"
                android:id="@+id/textView2" android:layout_gravity="left|center_horizontal"
                android:elegantTextHeight="false" android:layout_marginTop="15dp" android:textSize="30sp"
                android:layout_marginLeft="20dp" android:layout_marginRight="5dp" android:layout_marginBottom="15dp"/>
    </FrameLayout>
    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/dlg_reps"
                android:id="@+id/textView6" android:layout_marginLeft="15dp"
                android:textColor="@android:color/black" android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" android:layout_marginRight="10dp"
                android:layout_row="0" android:layout_column="0"

        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/dlg_kg"
                android:id="@+id/textView7" android:layout_column="1" android:textColor="@android:color/black"
                android:layout_margin="10dp" android:layout_row="0" android:layout_marginRight="15dp"/>
        <EditText
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editText2" android:layout_column="0" android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp" android:layout_row="1"

                android:layout_marginBottom="10dp"/>
        <EditText
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editText3" android:layout_column="1"
                android:maxLength="6"
                android:maxWidth="100dp" android:numeric="decimal" android:layout_row="1"
                android:layout_marginLeft="10dp" android:layout_marginRight="15dp" android:layout_marginBottom="10dp"/>
        <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="OK"
                android:id="@+id/button2" android:layout_row="2" android:layout_column="0"
                android:layout_marginLeft="15dp" android:layout_marginBottom="10dp"/>
        <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Отмена"
                android:id="@+id/button3" android:layout_row="2" android:layout_column="1"
                android:layout_marginLeft="10dp"/>
    </GridLayout>
</LinearLayout>