<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1"
              android:background="@color/light_gray_1">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/frameLayout"
            android:background="#ffa500">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/title"
                android:layout_gravity="start|center_vertical"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:text="@string/sets_creating"
                android:layout_marginStart="20dp"/>
    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ListView
                android:id="@+id/setsListView"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                tools:listitem="@layout/set_list_item"
                android:divider="#dedede"
                android:dividerHeight="1dp"
                />

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:background="@drawable/round_button"
                android:src="@drawable/ic_add_white_24dp_xxhd"
                android:id="@+id/button_add"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="50sp"
                android:visibility="visible"
                android:textColor="#fff"/>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:background="@drawable/button_end"
                android:src="@drawable/ic_done_white_24dp"
                android:id="@+id/button_end"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:visibility="invisible"
                android:textSize="50sp"/>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:background="@drawable/button_delete"
                android:src="@drawable/ic_delete_white_24dp_xxhdpi"
                android:id="@+id/button_delete"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:visibility="invisible"
                android:textSize="50sp"/>
    </FrameLayout>

</LinearLayout>

